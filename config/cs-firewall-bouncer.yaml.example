# Example configuration for cs-firewall-bouncer (Rust)
# Replace placeholders before running.

# Backend mode
mode: iptables

# CrowdSec Local API
api_url: ${API_URL}
api_key: ${API_KEY}

# Poll interval (Go-style duration, e.g. 10s, 1m30s)
update_frequency: 10s

# Optional filters to reduce API payload
# scopes: ["ip"]
# types: ["ban"]

# Optional iptables-specific settings (defaults applied if omitted)
# iptables:
#   chain: CROWDSEC_CHAIN
#   set_name_v4: crowdsec-blacklist
#   set_name_v6: crowdsec6-blacklist
#   set_type: nethash
#   set_size: 131072
#   deny_action: DROP  # DROP | REJECT | TARPIT | LOG
#   ipv4: true
#   ipv6: true

# Chain injection (top-level, compatible with the Go bouncer)
# Only configured chains are injected. If v4/v6 lists are not set,
# they inherit from iptables_chains.
iptables_chains:
  - INPUT
  - FORWARD
# iptables_v4_chains:
#   - INPUT
# iptables_v6_chains:
#   - INPUT
